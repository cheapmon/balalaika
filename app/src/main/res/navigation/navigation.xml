<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.github.cheapmon.balalaika.ui.dictionary.DictionaryFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dictionary">
        <action
            android:id="@+id/action_nav_home_to_nav_search"
            app:destination="@id/nav_search" />
        <argument
            android:name="external_id"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_search"
        android:name="com.github.cheapmon.balalaika.ui.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search">
        <argument
            android:name="restriction"
            android:defaultValue="@null"
            app:argType="com.github.cheapmon.balalaika.db.entities.history.SearchRestriction"
            app:nullable="true" />
        <argument
            android:name="query"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_nav_search_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_history"
        android:name="com.github.cheapmon.balalaika.ui.history.HistoryFragment"
        android:label="@string/menu_history"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_nav_history_to_nav_search"
            app:destination="@id/nav_search" />
    </fragment>
    <fragment
        android:id="@+id/nav_bookmarks"
        android:name="com.github.cheapmon.balalaika.ui.bookmarks.BookmarksFragment"
        android:label="@string/menu_bookmarks"
        tools:layout="@layout/fragment_bookmarks">
        <action
            android:id="@+id/action_nav_bookmarks_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_preferences"
        android:name="com.github.cheapmon.balalaika.ui.preferences.PreferencesFragment"
        android:label="@string/menu_preferences">
        <action
            android:id="@+id/action_nav_preferences_to_nav_sources"
            app:destination="@id/nav_sources" />
    </fragment>
    <fragment
        android:id="@+id/nav_sources"
        android:name="com.github.cheapmon.balalaika.ui.preferences.SourcesFragment"
        android:label="@string/menu_sources" />
    <fragment
        android:id="@+id/nav_selection_detail"
        android:name="com.github.cheapmon.balalaika.ui.selection.SelectionDetailFragment"
        android:label="@string/menu_selection_detail"
        tools:layout="@layout/fragment_selection_detail">
        <argument
            android:name="dictionary"
            app:argType="com.github.cheapmon.balalaika.core.DictionaryParcel" />
        <action
            android:id="@+id/action_nav_selection_detail_to_nav_selection"
            app:destination="@id/nav_selection"
            app:popUpTo="@id/nav_selection" />
    </fragment>
    <fragment
        android:id="@+id/nav_selection"
        android:name="com.github.cheapmon.balalaika.ui.selection.SelectionFragment"
        android:label="@string/selection_tab_list"
        tools:layout="@layout/fragment_selection_list">
        <action
            android:id="@+id/action_nav_selection_to_nav_selection_detail"
            app:destination="@id/nav_selection_detail" />
    </fragment>

</navigation>