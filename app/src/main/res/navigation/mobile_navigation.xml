<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.github.cheapmon.balalaika.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_searchItemFragment"
            app:destination="@id/nav_search" />
        <argument
            android:name="full_form_id"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_nav_home_self"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_info"
        android:name="com.github.cheapmon.balalaika.ui.info.InfoFragment"
        android:label="@string/menu_info"
        tools:layout="@layout/fragment_info"/>
    <fragment
        android:id="@+id/nav_preferences"
        android:name="com.github.cheapmon.balalaika.ui.preferences.PreferencesFragment"
        android:label="@string/menu_preferences" />
    <fragment
        android:id="@+id/nav_search"
        android:name="com.github.cheapmon.balalaika.ui.search.SearchItemFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search_items" >
        <action
            android:id="@+id/action_search_to_home"
            app:destination="@id/nav_home" />
        <argument
            android:name="search_text"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="restriction"
            app:argType="com.github.cheapmon.balalaika.ui.search.SearchRestriction"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_nav_search_to_self"
            app:destination="@id/nav_search" />
    </fragment>
    <fragment
        android:id="@+id/nav_history"
        android:name="com.github.cheapmon.balalaika.ui.search.SearchHistoryFragment"
        android:label="@string/menu_history"
        tools:layout="@layout/fragment_search_history" >
        <action
            android:id="@+id/action_nav_history_to_nav_search"
            app:destination="@id/nav_search" />
    </fragment>

</navigation>