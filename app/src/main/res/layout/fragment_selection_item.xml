<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dictionary"
            type="com.github.cheapmon.balalaika.model.SimpleDictionary" />

        <variable
            name="is_installed"
            type="Boolean" />

        <variable
            name="is_opened"
            type="Boolean" />

        <variable
            name="listener"
            type="com.github.cheapmon.balalaika.ui.selection.SelectionAdapter.Listener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/Widget.Balalaika.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> listener.onClickDictionary(dictionary)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{dictionary.name}"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    tools:text="Dictionary Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFeatureSettings="smcp"
                    android:text="@{dictionary.authors}"
                    android:textAppearance="?attr/textAppearanceCaption"
                    tools:text="Dictionary Authors" />

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/selection_guideline_icon"
                    app:layout_constraintTop_toBottomOf="@+id/selection_item_icon"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/selection_is_installed"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:visibility="@{is_installed}"
                        app:chipMinHeight="16dp" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="@string/selection_is_active"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@android:color/white"
                        android:visibility="@{is_opened}"
                        app:chipMinHeight="16dp"
                        app:chipSurfaceColor="?attr/colorPrimary" />

                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:text="@{dictionary.summary}"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:justify="@{true}"
                    tools:text="@string/impsum" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selection_item_button"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{() -> listener.onClickReadNow(dictionary)}"
                    android:text="@string/selection_action_activate"
                    android:visibility="@{is_installed &amp;&amp; !is_opened}" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>