<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.github.cheapmon.balalaika.ui.selection.SelectionDetailFragment.Listener" />

        <variable
            name="dictionary"
            type="com.github.cheapmon.balalaika.db.entities.dictionary.Dictionary" />
    </data>

    <ScrollView
        android:id="@+id/selection_detail_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selection_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/selection_detail_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="@{dictionary.name}"
                android:textAppearance="?attr/textAppearanceHeadline5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="This is a very long dictionary name" />

            <View
                android:id="@+id/selection_divider_top"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selection_detail_title" />

            <ImageView
                android:id="@+id/selection_detail_label_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/selection_labels"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selection_divider_top"
                app:srcCompat="@drawable/ic_label" />

            <TextView
                android:id="@+id/selection_detail_label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selection_no_labels"
                android:textAppearance="?attr/textAppearanceBody2"
                android:visibility="@{!dictionary.installed}"
                app:layout_constraintBottom_toBottomOf="@+id/selection_detail_label_icon"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toTopOf="@+id/selection_detail_label_icon" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/selection_detail_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/selection_detail_label_icon"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toTopOf="@+id/selection_detail_label_icon"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/selection_detail_chip_installed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selection_is_installed"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:visibility="@{dictionary.installed}"
                    app:chipIcon="@drawable/ic_library"
                    app:chipIconSize="12dp"
                    app:chipMinHeight="16dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/selection_detail_chip_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selection_is_active"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="@android:color/white"
                    android:visibility="@{dictionary.active}"
                    app:chipIcon="@drawable/ic_checkbox"
                    app:chipIconSize="12dp"
                    app:chipIconTint="@android:color/white"
                    app:chipMinHeight="16dp"
                    app:chipSurfaceColor="?attr/colorPrimary" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/selection_detail_chip_updatable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selection_is_updatable"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="@android:color/white"
                    android:visibility="@{dictionary.updatable}"
                    app:chipIcon="@drawable/ic_update"
                    app:chipIconSize="12dp"
                    app:chipIconTint="@android:color/white"
                    app:chipMinHeight="16dp"
                    app:chipSurfaceColor="?attr/colorSecondary" />

            </com.google.android.material.chip.ChipGroup>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/selection_detail_guideline_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="40dp" />

            <ImageView
                android:id="@+id/selection_detail_author_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/selection_authors_title"
                app:layout_constraintEnd_toEndOf="@+id/selection_detail_label_icon"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_label_icon"
                app:layout_constraintTop_toBottomOf="@+id/selection_detail_label_text"
                app:srcCompat="@drawable/ic_author" />

            <TextView
                android:id="@+id/selection_detail_author_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selection_authors_title"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="@+id/selection_detail_author_icon"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toTopOf="@+id/selection_detail_author_icon" />

            <TextView
                android:id="@+id/selection_detail_author_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{dictionary.authors}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toBottomOf="@+id/selection_detail_author_icon"
                tools:text="Author, author, author..." />

            <ImageView
                android:id="@+id/selection_detail_summary_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/selection_summary_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selection_detail_author_text"
                app:srcCompat="@drawable/ic_summary" />

            <TextView
                android:id="@+id/selection_detail_summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selection_summary_title"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="@+id/selection_detail_summary_icon"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toTopOf="@+id/selection_detail_summary_icon" />

            <TextView
                android:id="@+id/selection_detail_summary_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autoLink="web"
                android:text="@{dictionary.summary}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toBottomOf="@+id/selection_detail_summary_icon"
                tools:text="@string/impsum" />

            <ImageView
                android:id="@+id/selection_detail_info_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/selection_info_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selection_detail_summary_text"
                app:srcCompat="@drawable/ic_info" />

            <TextView
                android:id="@+id/selection_detail_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selection_info_title"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="@+id/selection_detail_info_icon"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toTopOf="@+id/selection_detail_info_icon" />

            <TextView
                android:id="@+id/selection_detail_info_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autoLink="web"
                android:text="@{dictionary.additionalInfo}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toBottomOf="@+id/selection_detail_info_icon"
                tools:text="@string/impsum" />

            <ImageView
                android:id="@+id/selection_version_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/selection_version_title"
                app:layout_constraintEnd_toEndOf="@+id/selection_detail_info_icon"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_info_icon"
                app:layout_constraintTop_toBottomOf="@+id/selection_detail_info_text"
                app:srcCompat="@drawable/ic_version" />

            <TextView
                android:id="@+id/selection_version_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selection_version_title"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="@+id/selection_version_icon"
                app:layout_constraintStart_toStartOf="@+id/selection_detail_guideline_icon"
                app:layout_constraintTop_toTopOf="@+id/selection_version_icon" />

            <TextView
                android:id="@+id/selection_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf('v') + String.valueOf(dictionary.version)}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="@+id/selection_version_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/selection_version_title"
                tools:text="v1.0" />

            <View
                android:id="@+id/selection_divider_bottom"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selection_version_text" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selection_divider_bottom">

                <Button
                    android:id="@+id/selection_button_activate"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> listener.onClickActivateButton()}"
                    android:text="@string/selection_action_activate"
                    android:visibility="@{dictionary.installed &amp;&amp; !dictionary.active}"
                    app:icon="@drawable/ic_checkbox" />

                <Button
                    android:id="@+id/selection_button_deactivate"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> listener.onClickDeactivateButton()}"
                    android:text="@string/selection_action_deactivate"
                    android:visibility="@{dictionary.installed &amp;&amp; dictionary.active}"
                    app:icon="@drawable/ic_checkbox_empty" />

                <Button
                    android:id="@+id/selection_button_update"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> listener.onClickUpdateButton()}"
                    android:text="@string/selection_action_update"
                    android:visibility="@{dictionary.updatable}"
                    app:icon="@drawable/ic_update" />

                <Button
                    android:id="@+id/selection_button_add"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> listener.onClickAddButton(dictionary)}"
                    android:text="@string/selection_action_add"
                    android:visibility="@{!dictionary.installed}"
                    app:icon="@drawable/ic_library" />

                <Button
                    android:id="@+id/selection_button_remove"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> listener.onClickRemoveButton()}"
                    android:text="@string/selection_action_remove"
                    android:theme="@style/ThemeOverlay.Balalaika.Danger"
                    android:visibility="@{dictionary.installed}"
                    app:icon="@drawable/ic_delete" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>