<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="in_progress"
            type="Boolean" />

        <variable
            name="empty"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/entry_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{!in_progress}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/fragment_dictionary_item">

        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/dictionary_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:translationY="-6dp"
            android:visibility="@{in_progress}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/entry_list" />

        <ImageView
            android:id="@+id/dictionary_empty_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/dictionary_empty"
            android:visibility="@{empty}"
            app:layout_constraintBottom_toTopOf="@+id/dictionary_empty_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entry_list"
            app:srcCompat="@drawable/ic_menu_book" />

        <TextView
            android:id="@+id/dictionary_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dictionary_empty"
            android:visibility="@{empty}"
            app:layout_constraintBottom_toTopOf="@+id/dictionary_empty_button"
            app:layout_constraintEnd_toEndOf="@+id/dictionary_empty_icon"
            app:layout_constraintStart_toStartOf="@+id/dictionary_empty_icon"
            app:layout_constraintTop_toBottomOf="@+id/dictionary_empty_icon" />

        <Button
            android:id="@+id/dictionary_empty_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dictionary_select_dictionary"
            android:visibility="@{empty}"
            app:layout_constraintBottom_toTopOf="@+id/entry_list"
            app:layout_constraintEnd_toEndOf="@+id/dictionary_empty_icon"
            app:layout_constraintStart_toStartOf="@+id/dictionary_empty_icon"
            app:layout_constraintTop_toBottomOf="@+id/dictionary_empty_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>