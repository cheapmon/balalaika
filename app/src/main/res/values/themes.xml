<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/mainColorLight</item>
        <item name="colorPrimaryDark">@color/mainColorDark</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentColorLight</item>
        <item name="colorOnPrimary">@color/mainTextColor</item>
        <item name="colorOnSecondary">@color/accentTextColor</item>

        <!-- Fonts -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ThemeOverlay.Balalaika.Danger" parent="">
        <item name="colorPrimary">@color/dangerColor</item>
        <item name="colorPrimaryVariant">@color/dangerColorLight</item>
        <item name="colorPrimaryDark">@color/dangerColorDark</item>
    </style>

    <style name="ThemeOverlay.Balalaika.Neutral" parent="">
        <item name="colorPrimary">@color/neutralColor</item>
        <item name="colorPrimaryVariant">@color/neutralColorLight</item>
        <item name="colorPrimaryDark">@color/neutralColorDark</item>
    </style>
</resources>